            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"ot\": \"{{ot_id}}\",\n  \"filename\": \"test.jpg\",\n  \"content_type\": \"image/jpeg\",\n  \"file_size\": 1024000\n}"
            },
            "url": {
