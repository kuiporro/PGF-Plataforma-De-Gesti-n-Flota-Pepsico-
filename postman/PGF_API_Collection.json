    {
      "name": "5. Evidencias",
      "item": [
        {
          "name": "Obtener Presigned URL",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const jsonData = pm.response.json();",
                  "    pm.environment.set('presigned_url', jsonData.upload.url);",
                  "    pm.environment.set('file_url', jsonData.file_url);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              },
              {
                "key": "Content-Type",
