    {
      "key": "base_url",
      "value": "http://localhost:8000/api/v1",
      "type": "string",
      "description": "URL base de la API. Para Docker usa: http://localhost:8000/api/v1, para desarrollo local: http://127.0.0.1:8000/api/v1"
    },
    {
      "key": "access_token",
      "value": "",
      "type": "string",
      "description": "Token JWT de acceso (se establece automáticamente después del login)"
    },
    {
      "key": "refresh_token",
      "value": "",
      "type": "string",
      "description": "Token JWT de refresh (se establece automáticamente después del login)"
    },
    {
      "key": "user_id",
